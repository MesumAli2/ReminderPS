 <resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reminders" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="menuItemColor">@color/black</item>
        <item name="addFragColor">#F1F4F6</item>
        <item name="checkBoxColor">@color/dark</item>

        <item name="reminderItem">@color/white</item>
        <item name="addEditTask">@color/white</item>
        <item name="welBtn">@color/teal_200</item>

        <!-- Primary tool bar color. -->
        <item name="colorPrimary">@color/white</item>
        <!--System status bar color -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!--Displays the text for toolbar  -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Theme for styling the floating button-->
        <item name="colorSecondary">@color/colorGrey</item>
        <!-- Theme for styling the back arrow button . -->
        <item name="android:textColorSecondary">@color/darkgrey</item>
        <item name="android:textColor"> @color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>


        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorGrey</item>
        <!-- For Android sdk versions 26+. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/opensans_font</item>
        <!-- Target Android sdk versions < 26 and > 14. -->
        <item name="fontFamily">@font/opensans_font</item>
        <!-- sets the style for the overflow button -->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <!--Property needed when setting your own toolbar(ActionBar)-->
        <item name="windowNoTitle">true</item>
        <item name="android:colorControlActivated">@color/colorGrey</item>
        <!--Theme for Date Time picker and Calendar time picker buttons  -->
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppTheme.Alert.Button.Neutral</item>
        <!--CheckBox border color -->
        <item name="colorOnSurface">@color/green</item>
        <!-- Customize your theme here. -->
    </style>
     <style name ="TextAppearance.AppCompat.ActionBar.Title." parent="@android:style/TextAppearance">
         <item name="android:textSize">5sp</item>
     </style>

     <!--Styles the 3 dot buttons on the edge of the applicaiton -->
     <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
         <item name="android:tint">#2E7D32</item>
     </style>

     <!--Styles Date Time picker and Calendar time picker Buttons  -->
     <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
         <item name="android:textColor">@color/teal_200</item>
     </style>
     <!--Styles Date Time picker and Calendar time picker Buttons  -->
     <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
         <item name="android:textColor">@color/teal_700</item>
     </style>

     <style name="AppTheme.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
         <item name="android:textColor">@color/purple_700</item>
     </style>


     <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
         <item name="android:windowBackground">@drawable/splash_image</item>
         <item name="android:statusBarColor">@color/white</item>
     </style>

 </resources>